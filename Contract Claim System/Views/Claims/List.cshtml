@model List<Contract_Claim_System.Models.Claim>
@{
    ViewData["Title"] = "All Claims";
    var role = Context.Session.GetString("UserRole");
    var isLecturer = role == "Lecturer";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-clipboard-data"></i> All Claims</h2>
        <p class="text-muted">Manage and review all submitted claims</p>
    </div>

    @if (isLecturer)
    {
        <a asp-controller="Claims" asp-action="Submit" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Claim
        </a>
    }
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #6c757d;"></i>
            <h4 class="mt-3">No Claims Submitted Yet</h4>
            <p class="text-muted">There are no claims in the system at the moment.</p>

            @if (isLecturer)
            {
                <a asp-controller="Claims" asp-action="Submit" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Submit First Claim
                </a>
            }
        </div>
    </div>
}
else
{
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Module</th>
                            <th>Period</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Total</th>
                            <th>Document</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            @if (role == "Academic Manager" || role == "Project Coordinator")
                            {
                                <th>Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td><code>#@c.ClaimId</code></td>
                                <td>@c.LecturerDisplayName</td>
                                <td><span class="badge bg-info">@c.Module</span></td>
                                <td>@c.Period</td>
                                <td>@c.HoursWorked hrs</td>
                                <td>@c.HourlyRate.ToString("C")</td>
                                <td class="fw-bold text-success">@c.TotalAmount.ToString("C")</td>
                                <td class="text-center">
                                    @if (c.DocumentData != null && c.DocumentData.Length > 0)
                                    {
                                        <a asp-controller="Claims" asp-action="DownloadDocument" asp-route-id="@c.ClaimId"
                                           class="btn btn-sm btn-outline-primary"
                                           title="Download @c.DocumentFileName">
                                            <i class="bi bi-download"></i> View
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (c.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Pending
                                        </span>
                                    }
                                    else if (c.Status == "Approved")
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Approved
                                        </span>
                                    }
                                    else if (c.Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Rejected
                                        </span>
                                    }
                                </td>
                                <td>
                                    @c.SubmittedDate.ToString("MMM dd, yyyy")
                                    <br />
                                    <small class="text-muted">@c.SubmittedDate.ToString("hh:mm tt")</small>
                                </td>
                                @if (role == "Academic Manager" || role == "Project Coordinator")
                                {
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Claims" asp-action="Details" asp-route-id="@c.ClaimId"
                                               class="btn btn-sm btn-info" title="View Details">
                                                <i class="bi bi-eye"></i> View
                                            </a>

                                            @if (c.Status == "Pending")
                                            {
                                                <a asp-controller="Claims" asp-action="Approve" asp-route-id="@c.ClaimId"
                                                   class="btn btn-sm btn-success" title="Approve Claim"
                                                   onclick="return confirm('Are you sure you want to approve this claim?')">
                                                    <i class="bi bi-check-lg"></i>
                                                </a>
                                                <a asp-controller="Claims" asp-action="Reject" asp-route-id="@c.ClaimId"
                                                   class="btn btn-sm btn-danger" title="Reject Claim"
                                                   onclick="return confirm('Are you sure you want to reject this claim?')">
                                                    <i class="bi bi-x-lg"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <p class="text-muted">
            <i class="bi bi-info-circle"></i>
            Total Claims: <strong>@Model.Count</strong> |
            Pending: <strong>@Model.Count(c => c.Status == "Pending")</strong> |
            Approved: <strong>@Model.Count(c => c.Status == "Approved")</strong> |
            Rejected: <strong>@Model.Count(c => c.Status == "Rejected")</strong>
        </p>
    </div>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">