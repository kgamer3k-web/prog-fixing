@model Contract_Claim_System.Models.Claim
@{
    ViewData["Title"] = "Edit Claim";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-pencil-square"></i> Edit Claim</h2>
        <p class="text-muted">Modify claim information</p>
    </div>
    <div>
        <a asp-controller="ProjectCoordinator" asp-action="Details" asp-route-id="@Model.ClaimId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Details
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="bi bi-pencil"></i> Edit Claim Details</h5>
            </div>
            <div class="card-body">
                <form asp-controller="ProjectCoordinator" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="ClaimId" />
                    <input type="hidden" asp-for="LecturerDisplayName" />
                    <input type="hidden" asp-for="Status" />
                    <input type="hidden" asp-for="SubmittedDate" />
                    <input type="hidden" asp-for="SubmittedBy" />
                    <input type="hidden" asp-for="SubmittedByRole" />

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> @ViewBag.Error
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Claim ID</label>
                            <input type="text" class="form-control" value="@Model.ClaimId" disabled />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Lecturer Name</label>
                            <input type="text" class="form-control" value="@Model.LecturerDisplayName" disabled />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Module" class="form-label">Module <span class="text-danger">*</span></label>
                            <input asp-for="Module" type="text" class="form-control" placeholder="e.g., PROG6212" required />
                            <span asp-validation-for="Module" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Period" class="form-label">Period <span class="text-danger">*</span></label>
                            <input asp-for="Period" type="text" class="form-control" placeholder="e.g., January 2025" required />
                            <span asp-validation-for="Period" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="HoursWorked" class="form-label">Hours Worked <span class="text-danger">*</span></label>
                            <input asp-for="HoursWorked" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                            <span asp-validation-for="HoursWorked" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="HourlyRate" class="form-label">Hourly Rate <span class="text-danger">*</span></label>
                            <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                            <span asp-validation-for="HourlyRate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Additional notes or comments..."></textarea>
                    </div>

                    <hr />

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-controller="ProjectCoordinator" asp-action="Details" asp-route-id="@Model.ClaimId"
                           class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Current Status</h5>
            </div>
            <div class="card-body">
                <p><strong>Status:</strong></p>
                @if (Model.Status == "Pending")
                {
                    <span class="badge bg-warning text-dark fs-5">
                        <i class="bi bi-clock"></i> Pending
                    </span>
                }
                else if (Model.Status == "Approved")
                {
                    <span class="badge bg-success fs-5">
                        <i class="bi bi-check-circle"></i> Approved
                    </span>
                }
                else if (Model.Status == "Rejected")
                {
                    <span class="badge bg-danger fs-5">
                        <i class="bi bi-x-circle"></i> Rejected
                    </span>
                }

                <hr />

                <p class="mb-1"><strong>Submitted:</strong></p>
                <p class="text-muted">@Model.SubmittedDate.ToString("MMMM dd, yyyy hh:mm tt")</p>

                <p class="mb-1"><strong>Last Modified:</strong></p>
                <p class="text-muted">@Model.LastModified.ToString("MMMM dd, yyyy hh:mm tt")</p>

                <hr />

                <div class="alert alert-warning">
                    <small>
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Note:</strong> Changes will be saved and reflected immediately.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}