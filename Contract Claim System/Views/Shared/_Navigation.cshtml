@{
    var role = Context.Session.GetString("UserRole");
    var email = Context.Session.GetString("UserEmail");
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <i class="bi bi-file-earmark-text"></i> Contract Claim System
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                @if (!string.IsNullOrEmpty(role))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house"></i> Dashboard
                        </a>
                    </li>

                    @if (role == "Lecturer")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claims" asp-action="Submit">
                                <i class="bi bi-plus-circle"></i> Submit Claim
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claims" asp-action="Track">
                                <i class="bi bi-list-check"></i> Track Claims
                            </a>
                        </li>
                    }
                    else if (role == "Academic Manager")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claims" asp-action="List">
                                <i class="bi bi-clipboard-check"></i> All Claims
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Lecturers" asp-action="Index">
                                <i class="bi bi-people"></i> Lecturers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reports" asp-action="Index">
                                <i class="bi bi-file-earmark-bar-graph"></i> Reports
                            </a>
                        </li>
                    }
                    else if (role == "Project Coordinator")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ProjectCoordinator" asp-action="Index">
                                <i class="bi bi-kanban"></i> Project Coordinator
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reports" asp-action="Index">
                                <i class="bi bi-file-earmark-bar-graph"></i> Reports
                            </a>
                        </li>
                    }
                }
            </ul>
            <ul class="navbar-nav">
                @if (!string.IsNullOrEmpty(role))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> @email
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><span class="dropdown-item-text"><strong>Role:</strong> @role</span></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">
                            <i class="bi bi-person-plus"></i> Register
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">